<p style="color: green"><%= notice %></p>

<h1>Todos</h1>


<table class="table table-striped" id="todos">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Task</th>
      <th scope="col">Done</th>
      <th scope="col">Pirority</th>
    </tr>
  </thead>
<tbody>
  <% @todos.each do |todo| %>
    <%= render todo %></tr>
  <% end %>
</tbody>
</table>

<%= link_to "New todo", new_todo_path %>
